<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">

      <div style="margin: 50px 0px 50px 30px;">
        <h5 class="my-6 ml-3 px-2 border bg-light d-inline">注文履歴一覧</h5>
      </div>

      <table class="mt-3">
                <thead class="border bg-light mt-3">
                  <tr class="block">
                    <th class="px-3" style="width: 10%"><h6>注文日</h6></th>
                    <th class="px-3" style="width: 50%"><h6>配送先</h6></th>
                    <th class="px-3" style="width: 30%"><h6>注文商品</h6></th>
                    <th class="px-3" style="width: 20%"><h6>支払金額</h6></th>
                    <th class="px-3" style="width: 30%"><h6>ステータス</h6></th>
                    <th class="px-3" style="width: 30%"><h6>注文詳細</h6></th>
                  </tr>
                </thead>
                <tbody>
                  <% @order.each do |order|%>
                  <tr>
                    <td class="px-3"><p><%= order.created_at %></p></td>
                    <td class="px-3"><p><%= order.postal_code %> <%= order.address%><%= order.name %></p></td>
                    <td class="px-3"><p><% order.order_details.each do |order_detail| %></p>
                                         <%= order_detail.item.name %></td>
                                        <% end %>
                    <td class="px-3"><p><% @total = 0 %>
                                        <% order.order_details.each do |order_detail|%>
                                          <% @total += order_detail.amount * order_detail.price %>
                                        <% end %>
                                        <%= @total %>
                                        </p></td>
                    <td class="px-3"><p><%= order.order_status %></p></td>
                    <td class="px-3"><p>注文詳細</p></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>

    </div>
  </div>
</div>