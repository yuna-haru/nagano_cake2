<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">

      <div style="margin: 50px 0px 50px 30px;">
        <h5 class="my-4 ml-3 px-2 border bg-light d-inline">新規会員登録</h5>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <span style="margin-right: 170px;">名前</span>
          <%= f.label :first_name, "(姓)" %><%= f.text_field :first_name %>   <%= f.label :last_name, "(名)" %> <%= f.text_field :last_name %>
        </div>

        <div class="field">
          <span style="margin-right: 119px;">フリガナ</span>
          <%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana %> <%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana %>
        </div>

        <div class="field">
          <span style="margin-right: 117px;"><%= f.label :email, "メールアドレス" %></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <span style="margin-right: 60px;"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></span>
          <%= f.text_field :postal_code %>
        </div>

        <div class="field">
          <span style="margin-right: 199px;"><%= f.label :address, "住所" %></span>
          <%= f.text_area :address %>
        </div>

        <div class="field">
          <span style="margin-right: 60px;"><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></span>
          <%= f.text_field :telephone_number %>
        </div>

        <div class="field">
          <span style="margin-right: 60px;"><%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %></span>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <span style="margin-right: 93px;"><%= f.label :password_confirmation, "パスワード(確認用)" %></span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <span style="margin: 20px 0px 30px 235px;">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </span>
      <% end %>

      <div style="margin: 30px 70px; 30px 0px">
        <p class="border bg-light d-inline">既に登録済みの方</p>
      </div>
      <div style="margin: 0px 70px 30px 90px;">
        <p><%= link_to "こちら", new_customer_session_path %>からログインしください</p>
      </div>

      <%#= render "public/shared/links" %>

    </div>
  </div>
</div>