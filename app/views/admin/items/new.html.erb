<div>
  <div>
    <div>
      <h5>商品新規登録</h5>
        <%= form_with model: @item, url: new_admin_item_path do |f| %>

          <label>商品画像</label> <%= f.file_field :image, accept: "image/*" %><br>

          <label>商品名</label> <%= f.text_field :name %><br>

          <label>商品説明</label> <%= f.text_area :introduction %><br>

          <label>ジャンル</label><br>

          <label>税抜価格</label> <%= f.text_field :price %>円<br>

          <label>販売ステータス</label><br>

          <%= f.submit '新規投稿' %><br>
        <% end %>
    </div>
  </div>
</div>
