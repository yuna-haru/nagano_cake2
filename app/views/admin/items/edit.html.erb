<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">
      <h5 class="mt-2">商品編集</h5>
        <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>

           <div><label>商品画像</label><%= f.file_field :image, accept: "image/*" %></div>

          <div><label>商品名</label> <%= f.text_field :name %></div>

          <div><label>商品説明</label> <%= f.text_area :introduction %></div>

          <div><label>ジャンル</label>　<%= f.collection_select(:genre_id, Genre.all, :id, :name) %></div>

          <div><label>税抜価格</label> <%= f.text_field :price %>円</div>

          <div>販売ステータス
          <%= f.label :is_active, '販売中', value: TRUE %>
          <%= f.radio_button :is_active, '1' %>
          <%= f.label :is_active, '販売停止', value: FALSE %>
          <%= f.radio_button :is_active, '0' %>
          </div>

          <%= f.submit '変更を保存' %>
        <% end %>
    </div>
  </div>
</div>
