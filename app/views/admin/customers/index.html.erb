<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">

      <div style="margin: 50px 0px 50px 30px;">
        <h5 class="my-4 ml-3 px-2 border bg-light d-inline">会員一覧</h5>
      </div>

              <table class="mt-3">
                <thead class="border bg-light mt-3">
                  <tr class="block">
                    <th class="px-3 text-nowrap font-weight-bold" style="width: 10%"><h6>会員ID</h6></th>
                    <th class="px-3 text-nowrap font-weight-bold" style="width: 20%"><h6>氏名</h6></th>
                    <th class="px-3 text-nowrap font-weight-bold" style="width: 30%"><h6>メールアドレス</h6></th>
                    <th class="px-3 text-nowrap font-weight-bold" style="width: 30%"><h6>ステータス</h6></th>
                  </tr>
                </thead>
                <tbody>
                  <% @customer.each do |customer|%>
                  <tr>
                    <td class="px-3"><p><%= customer.id %></p></td>
                    <td class="px-3"><p><%= link_to admin_customer_path(customer.id) do %>
                                          <%= customer.first_name %> <%= customer.last_name %>
                                        <% end %></p></td>
                    <td class="px-3"><p><%= customer.email %></p></td>
                    <td class="px-3"><p><% if customer.is_deleted %></p>
                                        <p class="text-muted">退会</p>
                                        <% else %>
                                        <p class="text-success">有効</p>
                                        <% end %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>


    </div>
  </div>
</div>