<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">

      <div style="margin: 50px 0px 50px 30px;">
        <h5 class="my-4 ml-3 px-2 border bg-light d-inline">注文履歴一覧</h5>
      </div>
      <table>
        <thead class="border bg-light mt-3">
          <tr>
            <th class="px-3 text-nowrap font-weight-bold" style="width: 30%"><h6>購入日時</h6></th>
            <th class="px-3 text-nowrap font-weight-bold" style="width: 20%"><h6>購入者</h6></th>
            <th class="px-3 text-nowrap font-weight-bold" style="width: 10%"><h6>注文個数</h6></th>
            <th class="px-3 text-nowrap font-weight-bold" style="width: 20%"><h6>注文ステータス</h6></th>
           </tr>
        </thead>
        <tbody>
           <% @order.each do |order|%>
           <tr>
            <td class="px-3"><p><%= link_to admin_order_path(order.id) do %>
                    <%= order.created_at.strftime('%Y/%m/%d') %>
                  <% end %></p></td>
            <td class="px-3"><p><%= order.customer.first_name %><%= order.customer.last_name %></p></td>
            <td class="px-3"><p><%= order.order_details.sum(:amount) %></p></td>
            <td class="px-3"><p><%= order.order_status %></p></td>
          </tr>
          <% end %>
         </tbody>
       </table>
    </div>
  </dib>
</div>
