<div>
  <div>
    <div>

      <h5>注文履歴詳細</h5>

      <div>
        <div>購入者 <%= link_to @custmer.first_name @custmer.last_name, admin_customer(@custmer.id) %></div>
        <div>注文日 <%= @order.created_at %></div>
        <div>配送先 <%= @customer.address %></div>
        <div>支払方法 </div>
        <%= form_with model: order, url: admin_orders_path, method: :patch, local: true do |f| %>
        <div>注文ステータス <%= f.select :order_status, Order.order_statuses.keys, class: "order_status" %></div>
        <div><%= f.submit "更新" , class: "btn btn-outline-success" %></div>
      </div>

      <div>
        <table>
          <thead>
            <tr>
               <th><h6>商品名</h6></th>
              <th><h6>単価(税込)</h6></th>
               <th><h6>数量</h6></th>
               <th><h6>小計</h6></th>

               <th><h6>製作ステータス</h6></th>
               <th colspan="3"></th>

             </tr>
          </thead>
           <tbody>
            <% @order.each do |order|%>
          　 <tr>
              <td><p><%= oder.item.name %></p></td>
              <td><p><%= cart_item.item.with_tax_price %</p></td>
               <td><p><%= order.item.amount %></p></td>
              <td><p><%= (cart_item.price * 1.1).floor * cart_item.amount %></p></td>
              <%= form_with model: order, url: admin_orders_path, method: :patch, local: true do |f| %><
               <td><p><%= f.select :order_detail_status, Order.order_detail_status.keys, class: "order_detail_status" %></p></td>
               <td><%= f.submit "更新" , class: "btn btn-outline-success" %></td>
            </tr>
             <% end %>
          </tbody>
        </table>
      </div>

      <div>
        <p>合計金額</p>
        <p>送料</p>
        <p>請求金額合計</p>
      </div>

    </div>
  </div>
</div>