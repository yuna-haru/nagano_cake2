<div>
  <div>
    <div>
      <h5>ジャンル一覧・追加</h5>

      <h6>ジャンル追加</h6>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録' %>
      <% end %>
    </div>
  </div>
</div>



<div>
  <div>
    <div>
      <table>
        <thead>
          <tr>
            <th><h6>ジャンル</h6></th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre|%>
          <tr>
            <td>
              <p><%= genre.name %></p>
            </td>
            <td>
             <p><%= link_to "編集する", edit_admin_genre_path(genre.id) %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>