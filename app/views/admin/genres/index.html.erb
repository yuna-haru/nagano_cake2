<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">
      <h5 class="my-6 ml-3 px-2 border bg-light d-inline">ジャンル一覧・追加</h5>

      <div class="my-5 form-group row">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <label class="mr-5">ジャンル名</label>
          <%= f.text_field :name %>
          <span class="ml-5"><%= f.submit '新規登録', class: 'btn btn-success' %></span>
        <% end %>
      </div>

        <table class="table">
        <thead class="border bg-light">
          <tr>
            <th class="pl-5" style="width: 20%">ジャンル</th>
            <th colspan="1" style="width: 10%"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre|%>
          <tr>
            <td>
              <p class="ml-2 text-nowrap"><%= genre.name %></p>
            </td>
            <td>
             <p><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></p>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
