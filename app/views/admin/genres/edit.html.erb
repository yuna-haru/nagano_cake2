<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">
      <h5 class="mt-2 ml-3 px-2 border bg-light d-inline">ジャンル編集</h5>

      <%= form_with model: @genre, url:admin_genre_path, method: :PATCH do |f| %>
        <label for="genre_name" class="mr-5 my-5">ジャンル名</label>
        <%= f.text_field :name, autofocus: true, id:"genre_name", placeholder:"名前" %>
          <span class="ml-5"><%= f.submit "変更を保存", class: 'btn btn-success' %></span>
        <% end %>
    </div>
  </div>
</div>